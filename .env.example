# Required Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
BASE_URL=https://your-deployment-url.railway.app

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_ORIGINS=https://claude.ai,https://api.anthropic.com,*

# OAuth Configuration
OAUTH_CODE_EXPIRY=60
OAUTH_TOKEN_EXPIRY=3600
OAUTH_REFRESH_TOKEN_EXPIRY=86400

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Airtable Configuration
AIRTABLE_BASE_URL=https://api.airtable.com/v0
AIRTABLE_TIMEOUT=30

# MCP Configuration
MCP_PROTOCOL_VERSION=2025-03-26
MCP_SERVER_NAME=airtable-remote-mcp
MCP_SERVER_VERSION=2.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cleanup Configuration
CLEANUP_INTERVAL=300

# Optional: Redis for production (uncomment if using Redis)
# REDIS_URL=redis://redis:6379/0

# Optional: Database for production (uncomment if using database)
# DATABASE_URL=postgresql://user:password@localhost:5432/airtable_mcp
