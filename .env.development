# Development Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here

# Server Configuration
HOST=127.0.0.1
PORT=8000
ENVIRONMENT=development
BASE_URL=http://localhost:8000

# Security Configuration (use weak keys for development only)
SECRET_KEY=development-secret-key-not-for-production
ALLOWED_ORIGINS=*

# OAuth Configuration (more lenient for development)
OAUTH_CODE_EXPIRY=300
OAUTH_TOKEN_EXPIRY=7200
OAUTH_REFRESH_TOKEN_EXPIRY=86400

# Rate Limiting (disabled for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Airtable Configuration
AIRTABLE_BASE_URL=https://api.airtable.com/v0
AIRTABLE_TIMEOUT=30

# MCP Configuration
MCP_PROTOCOL_VERSION=2025-03-26
MCP_SERVER_NAME=airtable-remote-mcp-dev
MCP_SERVER_VERSION=2.0.0

# Logging Configuration (more verbose for development)
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(funcName)s:%(lineno)d - %(message)s

# Cleanup Configuration
CLEANUP_INTERVAL=60
